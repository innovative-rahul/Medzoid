                <p><img alt="" class="img-fluid" src="https://www.medzoid.com/content/images/Blogs/@Model.blog.image"></p>
                <h1>@Model.blog.title</h1>
                <div class="postmeta">
                    <ul>
                        <li><a href="#"><i class="icon_clock_alt"></i> @Convert.ToDateTime(@Model.blog.date).ToString("dd/MM/yyyy")</a></li>
                        <li><a href="#"><i class="icon_pencil-edit"></i> @Model.blog.author</a></li>
                        <li><a href="#"><i class="icon_comment_alt"></i> (14) Comments</a></li>
                    </ul>
                </div>
                <!-- /post meta -->
                <div class="post-content">
                    <div class="dropcaps">

                        @Html.Raw(@Model.blog.text)

                    </div>
                </div>
