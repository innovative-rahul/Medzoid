<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    My Appointments
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        <div class="dropdown dropdown-inline">
                            <button type="button" class="btn btn-default btn-icon-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="la la-download"></i> Export
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <ul class="kt-nav">
                                    <li class="kt-nav__section kt-nav__section--first">
                                        <span class="kt-nav__section-text">Choose an option</span>
                                    </li>
                                    <li class="kt-nav__item">
                                        <a href="#" class="kt-nav__link">
                                            <i class="kt-nav__link-icon la la-print"></i>
                                            <span class="kt-nav__link-text">Print</span>
                                        </a>
                                    </li>
                                    <li class="kt-nav__item">
                                        <a href="#" class="kt-nav__link">
                                            <i class="kt-nav__link-icon la la-copy"></i>
                                            <span class="kt-nav__link-text">Copy</span>
                                        </a>
                                    </li>
                                    <li class="kt-nav__item">
                                        <a href="#" class="kt-nav__link">
                                            <i class="kt-nav__link-icon la la-file-excel-o"></i>
                                            <span class="kt-nav__link-text">Excel</span>
                                        </a>
                                    </li>
                                    <li class="kt-nav__item">
                                        <a href="#" class="kt-nav__link">
                                            <i class="kt-nav__link-icon la la-file-text-o"></i>
                                            <span class="kt-nav__link-text">CSV</span>
                                        </a>
                                    </li>
                                    <li class="kt-nav__item">
                                        <a href="#" class="kt-nav__link">
                                            <i class="kt-nav__link-icon la la-file-pdf-o"></i>
                                            <span class="kt-nav__link-text">PDF</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        &nbsp;
                        <a href="#" class="btn btn-brand btn-elevate btn-icon-sm">
                            <i class="la la-plus"></i>
                            New Record
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable " id="kt_table_1">
                <thead>
                    <tr>
                        <th>Serial No</th>
                        <th>Date</th>
                        <th>Patient Name</th>
                        <th style="width:34%">Clinic Address</th>
                        <th>Time</th>
                        <th>Appointment No.</th>
                        <th>Queue No.</th>
                        <th>Status</th>
                        @*<th>Action</th>*@
                    </tr>
                </thead>

                <tbody>

                    @{ int rowNo = 0; }
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(rowNo += 1)<input type="hidden" value="@item.Id" id="hdid@(rowNo)" />
                                </td>
                                <td>@item.Date</td>
                                <td>@item.PatientName</td>
                                <td>@item.ClinicAddress</td>
                                <td>@item.AppointmentSchedule</td>
                                <td>@item.QueueNo</td>
                                <td>@item.AppointmentNo</td>
                                <td>
                                    @if (item.AppointmentStatus == "Request Pending")
                                    {
                                        <span class="kt-badge  kt-badge--danger kt-badge--inline kt-badge--pill">@item.AppointmentStatus</span>
                                    }
                                    else if (item.AppointmentStatus == "Request Accepted")
                                    {
                                        <span class="kt-badge  kt-badge--success kt-badge--inline kt-badge--pill">@item.AppointmentStatus</span>
                                    }
                                    else
                                    {
                                        <span class="kt-badge  kt-badge--primary kt-badge--inline kt-badge--pill">@item.AppointmentStatus</span>
                                    }
                                </td>
                                @*<td>

                                    <span class="dropdown">
                                        <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false" id="lnkDropdown">
                                            <i class="la la-ellipsis-h"></i>
                                        </a>
                                        <span class="dropdown-menu dropdown-menu-right" id="dvdropdown">
                                            @if (item.AppointmentStatus != "Request Reject")
                                            {
                                                <a class="dropdown-item" href="@Url.Action("CancelAppointment", "User", new { id = @item.Id })"><i class="la la-edit"></i> Cancel Appointment</a>
                                            }
                                        </span>
                                    </span>
                                </td>*@
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10">
                                No Appointment Found
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
</div>


