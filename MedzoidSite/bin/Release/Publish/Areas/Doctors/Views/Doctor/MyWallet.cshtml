                            <i class="la la-plus"></i>
                            New Record
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                <thead>
                    <tr>
                        <th>Serial No</th>
                        <th>Amount</th>
                        <th>Transfer Type</th>
                        <th>Transfer date</th>
                        <th>Message</th>
                        @*<th>Action</th>*@
                    </tr>
                </thead>

                <tbody>

                    @{ int rowNo = 0; }
                    @if (Model.walletDetails.Count() > 0)
                    {
                        foreach (var item in Model.walletDetails)
                        {
                            <tr>
                                <td>
                                    @(rowNo += 1)
                                </td>
                                <td>@item.amount</td>
                                <td>@item.TransferType</td>
                                <td>@item.TransferDate</td>
                                <td>@item.Message</td>
                                @*<td>

                                        <span class="dropdown">
                                            <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false" id="lnkDropdown">
                                                <i class="la la-ellipsis-h"></i>
                                            </a>

                                            <div class="dropdown-menu dropdown-menu-right" style="display: none;" id="dvdropdown">

                                            </div>
                                        </span>


                                    </td>*@
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10">
                                No Appointment Found
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
            <!--end: Datatable -->
        </div>
    </div>
