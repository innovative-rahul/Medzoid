<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">


    <div class="kt-portlet">


        <div class="kt-portlet__body kt-portlet__body--fit">
            <div class="kt-grid">
                <div class="kt-grid__item kt-grid__item--fluid kt-wizard-v4__wrapper">
<!--begin: Form Wizard Form-->
                    <div class="kt-form" id="kt_user_add_form">
<!--begin: Form Wizard Step 1-->
                        <div class="kt-wizard-v4__content" data-ktwizard-type="step-content" data-ktwizard-state="current">
@*<div class="kt-heading kt-heading--md">Register Doctor:</div>*@

                            <div class="kt-section kt-section--first">
                                <div class="kt-wizard-v4__form" style="margin-top: 0">
                                    <div class="row">
                                        <div class="col-xl-12">
                                            <div class="kt-section__body">
                                                @using (Html.BeginForm("AddFaq", "Admin", FormMethod.Post))
                                                {
                                                <div class="kt-portlet__body">

                                                    <div class="row">
                                                        <div class="col-xl-12">
                                                            <div class="form-group">
                                                                <label>Question </label>
                                                                <input type="hidden" name="id" id="id" value="@ViewBag.id">
                                                                <input type="text" class="form-control" name="Question">
                                                                <span class="form-text text-muted">Please enter Question.</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-xl-12">
                                                            <div class="form-group">
                                                                <label>Answer</label>
                                                                <textarea id="descr" name="Answer"></textarea>
                                                                <span class="form-text text-muted">Please enter Answer.</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-xl-6">
                                                            <div class="form-group">
                                                                <label>Category </label>
                                                                <input type="hidden" name="id" id="id" value="@ViewBag.id">
                                                                <select id="ddlCategory" name="Category" class="form-control">
                                                                    <option value="About Medzoid">About Medzoid</option>
                                                                    <option value="Data & Privacy">Data & Privacy</option>
                                                                    <option value="Appointments">Appointments</option>
                                                                    <option value="My Account">My Account</option>
                                                                    <option value="Reviews">Reviews</option>
                                                                    <option value="Practice Getting Started">Practice Getting Started</option>
                                                                    <option value="Pharmacy">Pharmacy</option>
                                                                    <option value="Corona">Corona</option>
                                                                </select>
                                                                <span class="form-text text-muted">Please enter Title.</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                    <div class="kt-portlet__foot">
                                                        <div class="row">
                                                            <div class="col-xl-6">
                                                                <input type="submit" class="btn btn-success" value="Save" id="btnSave" />
                                                                <button type="reset" class="btn btn-secondary">Cancel</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }


                                            </div>
                                        </div>
                                    </div>


                                    <div style="margin-left:2%;margin-right:2%  ">

                                        <table id="tableData" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Serial No</th>
                                                    <th>Question</th>
                                                    <th>Answer</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @{ int rowNo = 0; }
                                                @if (Model.FaqList.Count() > 0)
                                                {
                                                    foreach (var item in Model.FaqList)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @(rowNo += 1)<input type="hidden" value="@item.id" id="hdid@(rowNo)" />
                                                            </td>
                                                            <td> @Html.Raw(item.Question)</td>
                                                            <td>@Html.Raw(item.Answer)</td>
                                                            <td>
                                                                <span class="dropdown">
                                                                    <a href="#" class="btn btn-sm btn-clean btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="false" id="lnkDropdown">
                                                                        <i class="la la-ellipsis-h"></i>
                                                                    </a>
                                                                </span>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td style="width:300px">No Records Found</td>
                                                        <td style="display: none"></td>
                                                        <td style="display: none"></td>
                                                        <td style="display: none"></td>
                                                        <td style="display: none"></td>
                                                        <td style="display: none"></td>

                                                    </tr>
                                                }

                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
<!--end: Form Wizard Form-->
                </div>
            </div>
        </div>
    </div>


<!--end::Portlet-->
</div>
<!-- end:: Content -->

