@section afterjs{
    <script src="~/js/common_scripts.min.js"></script>
    <script src="~/js/functions.js"></script>
    <script>



        var userMaster = new Object();
        userMaster.mobile = $('#mobileno').val();
        userMaster.password = $('#password').val();

        $.ajax({
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            dataType: 'json',
            url: "/HelpFagJson",
            data: {},
            success: function (data) {
                if (data.Status == true) {
                    for (var i = 0; i < data.data.length; i++) {
                        if (data.data[i].Category == "About Medzoid") {
                            $('#accordion1').append('<h4 class="nomargin_top">' + data.data[i].Question + '</h4><div class="add_bottom_45 accordion"><p>' + $.trim(data.data[i].Answer) + '</p></div>');
                        }
                        else if (data.data[i].Category == "Data \&\ Privacy") {
                            $('#accordion2').append('<h4 class="nomargin_top">' + data.data[i].Question + '</h4><div class="add_bottom_45 accordion"><p>' + $.trim(data.data[i].Answer) + '</p></div>');
                        }
                        else if (data.data[i].Category == "Appointments") {
                            $('#accordion3').append('<h4 class="nomargin_top">' + data.data[i].Question + '</h4><div class="add_bottom_45 accordion"><p>' + $.trim(data.data[i].Answer) + '</p></div>');
                        }
                        else if (data.data[i].Category == "My Account") {
                            $('#accordion4').append('<h4 class="nomargin_top">' + data.data[i].Question + '</h4><div class="add_bottom_45 accordion"><p>' + $.trim(data.data[i].Answer) + '</p></div>');
                        }
                        else if (data.data[i].Category == "Reviews") {
                            $('#accordion5').append('<h4 class="nomargin_top">' + data.data[i].Question + '</h4><div class="add_bottom_45 accordion"><p>' + $.trim(data.data[i].Answer) + '</p></div>');
                        }
                        else if (data.data[i].Category == "Practice Getting Started") {
                            $('#accordion6').append('<h4 class="nomargin_top">' + data.data[i].Question + '</h4><div class="add_bottom_45 accordion"><p>' + $.trim(data.data[i].Answer) + '</p></div>');
                        }
                        else if (data.data[i].Category == "Pharmacy") {
                            $('#accordion7').append('<h4 class="nomargin_top">' + data.data[i].Question + '</h4><div class="add_bottom_45 accordion"><p>' + $.trim(data.data[i].Answer) + '</p></div>');
                        }
                    }
                }
                $("#accordion1").accordion({
                    collapsible: true
                });
               
                
            },
            error: function (xhr) {
                alert(xhr.responseText)
            }
        });



        function Expand(name) {
            if (name == 'AboutMedzoid') {
                $("[id^='accordion']").hide();
                $('#accordion1').show(500);
            }
            else if (name == 'data') {
                $("[id^='accordion']").hide();
                $('#accordion2').show(500);
                 $("#accordion2").accordion({
                    collapsible: true
                });
            }
            else if (name == 'Appointments') {
                $("[id^='accordion']").hide();
                $('#accordion3').show();
                $("#accordion3").accordion({
                    collapsible: true
                });
            }
            else if (name == 'MyAccount') {
                $("[id^='accordion']").hide();
                $('#accordion4').show();
                 $("#accordion4").accordion({
                    collapsible: true
                });
            }
            else if (name == 'Reviews') {
                $("[id^='accordion']").hide();
                $('#accordion5').show();
                 
                $("#accordion5").accordion({
                    collapsible: true
                });
            }
            else if (name == 'Practice') {
                $("[id^='accordion']").hide();
                $('#accordion6').show();
                 $("#accordion6").accordion({
                    collapsible: true
                });
            }
            else if (name == 'Pharmacy') {
                $("[id^='accordion']").hide();
                $('#accordion7').show();
                               
                $("#accordion7").accordion({
                    collapsible: true
                });
            }

        }

    </script>

}


