            function GetTime(docId, ClinicId) {

                $.ajax({
                    type: 'POST',
                    url: 'https://api.medzoid.com/api/GetTimeSchedule',
                    data: { docId: docId, clinicId: ClinicId },
                    headers: { 'Content-type': 'application/x-www-form-urlencoded' },
